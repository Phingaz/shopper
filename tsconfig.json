{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "removeComments": true,
    "target": "ES6",
    "types": ["node", "express"],
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "src/global.d.ts"]
}
